# Full Stack Development Environment Configuration
# No Code Architect Toolkit - Complete 5-Container Setup

# App Configuration
APP_NAME=NCAToolkit
APP_DEBUG=true
APP_DOMAIN=localhost:8080
APP_URL=http://localhost:8080

# API Configuration
API_KEY=local-dev-key-123

# MinIO S3-Compatible Storage Configuration
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_REGION=us-east-1
S3_BUCKET_NAME=nca-toolkit-local

# PostgreSQL Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=n8n-postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n123

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=UTC

# Ollama Configuration
OLLAMA_HOST=ollama-cpu
OLLAMA_PORT=11434

# FFmpeg Paths
FFMPEG_INPUT_PATH=/app/ffmpeg-input
FFMPEG_OUTPUT_PATH=/app/ffmpeg-output

# Optional: Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300